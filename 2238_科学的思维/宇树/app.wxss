
.fix_btn{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background-color: #febd00;

}
 button:after {
  border: 0;
 
}

 button {
  background-color: rgba(250, 78, 81, 0);
  border: none;
  border-color: rgba(165, 41, 43, 0);
  padding: 0;
  margin: 0;
  /* display: inline-block; */
  line-height: normal;
  font-size:22rpx ;
}
.no_ev{
  padding: 100rpx 25rpx;
  text-align: center;
  font-size: 26rpx;
}

.video_c{
  width: 100%;
  height: 100%;
}
.cheng{
  height: 150rpx;
}
.html_txt{
  padding: 20rpx;
}
.fix_btn view{
  float:left;
  width: 50%;
}
.fix_btn view:last-child{
  background-color: #FFAE00;
}
.zz{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: #000;
  opacity: 0.6;
  z-index: 100;
}
.fix_a{
  position: fixed;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  border-top: 1px solid #dcdcdc;
  bottom: 0;
  background-color: #fff;
  box-sizing: border-box;
  padding-right: 220rpx;
  text-align: right;
  font-size: 30rpx;
}

.fix_a text{
  color: #febd00;
}

.sub_btn{
  position: absolute;
  width: 200rpx;
  height: 98rpx;
  line-height: 98rpx;
  background-color: #febd00;
  top: 0;
  right: 0;
  text-align: center;
  z-index: 10000;
  color: #fff;
  font-size: 30rpx;
}
.right_concar{

  height: 100%;
  width: 350rpx;
  position: fixed;
  right: 0;
  top: 0;
  z-index: 10000;
  box-sizing: border-box;
  padding: 150rpx 0;
}
.right_box{
  background-color: #fff;
  height: 100%;
}
.cancat_tit{
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333333;
  border-bottom: 1px solid #dcdcdc;
}
.concat_item{
  height: 100rpx;
  border-bottom: 1px solid #dcdcdc;
  padding: 0 25rpx;
  line-height: 100rpx;
  font-size:28rpx ;
  color: #333333;
  padding-left: 130rpx;
  position: relative;
 }

.concat_item image{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    position: absolute;
    left: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    
}



