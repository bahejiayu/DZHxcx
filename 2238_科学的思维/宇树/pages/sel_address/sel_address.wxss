page{
  background-color: #f7f7f7;
  color: #333;
}
.add_container{
  background-color: #fff;
  border-top: 1px solid #dcdcdc;
}
.add_list{
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #dcdcdc;
  padding-right: 140rpx;
  overflow: hidden;
  font-size: 26rpx;
  position: relative;
}
.ad_name{
  float: left;
}
.ad_name text{
  color:#9d2427 ;
}
.ad_phone{
  float: right;
}


.add_info{
  margin-top: 15rpx;
}
.top_{
  overflow: hidden;
}
.add_list image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.fixed_bottom{
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    position: fixed;
    bottom: 0;
    background-color: #febd00;
    width: 100%;

}