page{
  border-top: 1px solid #dcdcdc;
}
.top_chk_box{
  padding:  50rpx 12.5rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
}
.chk_item{
      float: left;
      width: 33.33%;
      padding: 0rpx 12.5rpx;
      box-sizing: border-box;
      text-align: center;
      font-size: 28rpx;
      margin-bottom: 30rpx;
}
.chk_item>view{
      border: 2rpx solid #333333;
      padding: 20rpx 10rpx;
      border-radius: 8rpx;
}
.chk_item.cur>view{
      border: 2rpx solid #febd00;
      color:#febd00; 

}
.yy_time{
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 25rpx;
    background-color: #f7f7f7;  
}
.yy_time view:first-child{
  font-size: 30rpx;
  color: #333333;
  float: left;

}
.yy_time view:last-child{
  font-size:26rpx ;
  color: #939393;
  float: right;
}

.yy_time view:last-child image{
  width:10rpx ;
  height: 17rpx;
  margin-left: 10rpx;
}

picker-view view{
  text-align: center;
  font-size: 28rpx;
  color: #828282;
}
.yy_box{
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  z-index: 1000;
  background-color: #fff;
}
.zz{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: #000;
  opacity: 0.6;
}
.yy_top{
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 25rpx;
  border-bottom: 1px solid #dcdcdc;
  font-size: 26rpx;
  color: #828282;
  position: relative;
}
.qx_{
  float: left;
   height: 100rpx;
  line-height: 100rpx;
  padding-right: 50rpx;

}
.qd_{
   float: right;
   height: 100rpx;
  line-height: 100rpx;
  padding-left: 50rpx;
  color: #333333;
}
.yy_top text{
  position: absolute;
  font-size:30rpx ;
  color: #333333;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.tip_box{
    padding: 0 65rpx;
    width: 100%;
    box-sizing: border-box;
    position: relative;
    z-index: 1000;
}
.tip_box_container{

  background-color: #fff;
  border-radius: 10rpx;
}
.tip_top{
  padding: 65rpx;
  border-bottom: 1px solid #dcdcdc;
  font-size: 28rpx;
  line-height: 45rpx;
  color: #828282;
}
.tip_bottom{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #febd00;
  font-size: 32rpx;
}
.show_toast{
  position: fixed;
  width: 500rpx;
  box-sizing: border-box;
  padding: 25rpx;
  background-color: rgba(0, 0, 0, .6);
  font-size: 24rpx;
  color:#fff ;
  top: 35%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 10rpx;
  z-index: 100000;
}



















