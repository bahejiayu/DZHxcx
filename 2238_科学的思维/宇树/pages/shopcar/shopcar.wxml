<view class='car_fix' wx:if="{{list_.length>0}}">
  <view class='chk_car'>
    <view class='lable_item' bindtap='tog_all'>
      <view class='wai_ {{all_cur==true?"cur":""}} }}'>
        <view class='guo_'></view>
      </view>
      <text>全选</text>
    </view>
  </view>
  <view class='go_buy {{is_m==true?"l_":""}}' bindtap='go_buy'>
    去结算
  </view>


</view>
