<view class='car_box'>
  <view class='car_item {{item.left==true?"h_left":""}}' wx:for='{{list_}}' capture-bind:touchstart='st' capture-bind:touchend='end' data-index='{{index}}'>
    <view class='lable_item' bindtap='tog_cur' data-index='{{index}}'>
      <view class='wai_ {{item.cur==true?"cur":""}}' data-index='{{index}}'>
        <view class='guo_' data-index='{{index}}'></view>
      </view>
    </view>
    <view class='index_item' data-index='{{index}}'>
      <view class='index_left' data-index='{{index}}'>
        <image src='{{url+item.pic}}' data-index='{{index}}'></image>
      </view>
      <view class='index_right' data-index='{{index}}'>
        <view class='goods_tit' data-index='{{index}}'>
          {{item.title}}
        </view>
        <view class='goods_info' data-index='{{index}}'>
          <view wx:if='{{item.label}}' data-index='{{index}}'>{{item.label}}</view>
        </view>
        <view class='goods_price' data-index='{{index}}'>￥{{item.price}}</view>
      </view>
      <view class='car_del' data-index='{{index}}' data-id='{{item.id}}'  bindtap='de_box'>
        删除
      </view>
    </view>
  </view>
</view>


