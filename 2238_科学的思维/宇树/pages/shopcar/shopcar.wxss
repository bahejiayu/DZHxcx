.index_item{
    padding: 20rpx 25rpx;
    padding-left: 250rpx;
    position: relative;
    height: 200rpx;
    background-color: #fff;
}

.index_left{
  width:200rpx ;
  height: 200rpx;
  position: absolute;
  left: 25rpx;
  top: 20rpx;
}
.index_left image{
  width: 100%;
  height: 100%;
}
.goods_tit{
  font-size: 30rpx;
  color: #333333;
}


.goods_info{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #828282;
}
.goods_info view{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.goods_info view:first-child{
  margin-bottom: 9rpx;
}
.index_right{
  height: 100%;
  position: relative;
}
.goods_price{
  font-size:36rpx ;
  color: #febd00;
  bottom: 0;
  position: absolute;
}
.index_item navigator{
  height: 100%;
  display: block;
}
.car_item{
  position: relative;
  background-color: #fff;
  padding-left: 65rpx;
  border-bottom: 1px solid #dcdcdc;
  transition: all 0.2s;
}






.car_box .lable_item{
  position: absolute;
  left: 25rpx;
  top: 50%;
  transform: translateY(-50%);
}
.car_fix .lable_item{
  float: left;
}
.car_fix{
  bottom: 110rpx;
}
.lable_item text{
  font-size: 28rpx;
  margin-left: 10rpx;
}
.car_fix .wai_{
  margin-right: 20rpx;
}
.wai_ {

width:37rpx;
height:37rpx;
background-color:#F5F5F5;
border:2.5rpx solid #CCC;
-webkit-border-radius:50%;
border-radius:50%;
vertical-align:middle;
position: relative;
display: inline-block;

}
.wai_.cur{
   border-color: #febd00!important;
    background-color: #febd00!important;
}
.guo_{
    position: absolute;
     left: 8rpx; 
     top: 10rpx; 
    width: 20rpx;
    height: 10rpx;
    border-left: 4rpx solid #fff;
    border-bottom: 4rpx solid #fff;
    -webkit-transform: rotate(-45deg);
    -ms-transform: rotate(-45deg);
    display: none;
    transform: rotate(-45deg);
}
.cur .guo_{
  display: block;
  }

.car_del{
  height: 100%;
  width: 150rpx;
  background-color: #febd00!important;
  line-height: 240rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 0;
  transform: translateX(100%);
  
}
.car_item{
  height: 240rpx;
}
.car_fix{
    padding-left: 25rpx;
    height: 98rpx;
    line-height: 98rpx;
    background-color: #fff;
    position: fixed;
    width: 100%;
    box-sizing: border-box;
    font-size: 30rpx;
    padding-right: 200rpx;
    border-top: 1px solid #dcdcdc;
}

.go_buy{
  width: 200rpx;
  height: 98rpx;
  line-height: 98rpx;
  background-color: #bbbbbb;
  color: #fff;
  position: absolute;
  right: 0;
  text-align: center;

}

.zz{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: #000;
  opacity: 0.6;
  z-index: 1000;
}
.tip_box{
    padding: 0 65rpx;
    width: 100%;
    box-sizing: border-box;
    position: fixed;
    z-index: 1000;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.tip_box_container{

  background-color: #fff;
  border-radius: 10rpx;
}
.tip_top{
  padding: 65rpx;
  border-bottom: 1px solid #dcdcdc;
  font-size: 28rpx;
  line-height: 45rpx;
  color: #828282;
}
.tip_bottom{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #febd00;
  font-size: 32rpx;
}















